{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": [
    "**/node_modules/**"
  ],
  "rules": {
    "comma-dangle": "off",
    "linebreak-style": "off",
    "max-len": "warn",
    "no-cond-assign": "off",
    "no-console": "off",
    "no-multiple-empty-lines": "warn",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "off",
    "padded-blocks":"off",
    "prefer-template": "warn",
    "quotes": [
      "error",
      "double"
    ]
  }
}
